bool checkTriplet(int arr[], int n) {
	    
	    sort(arr,arr+n);
	    
	    for(int i=0;i<n;i++)
	    {
	        for(int j=i+1;j<n;j++)
	        {
	            for(int k=j+1;k<n;k++)
	            {
	                int temp =arr[i]*arr[i] + arr[j]*arr[j];
	                if(temp ==arr[k]*arr[k])
	                {
	                    return 1;
	                }
	            }
	        }
	    }
	    return 0;
	}
