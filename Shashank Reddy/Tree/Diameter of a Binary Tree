https://courses.cs.duke.edu/spring00/cps100/assign/trees/diameter.html

int height(Node *root)
   {
       if(root==NULL) return 0;
       int lh= height(root->left);
       int rh= height(root->right);
       res=max(res,lh+rh+1);
       return 1+ max(lh,rh);
   }
   int diameter(Node* root) {
       height(root);
       return res;
   }
